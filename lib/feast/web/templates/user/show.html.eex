<div id="user-show" class="ui basic segment">
  <h2>Show user</h2>

  <ul class="ui list">
    <li>
      <strong>Name:</strong>
      <%= @user.name %>
    </li>

    <li>
      <strong>Email:</strong>
      <%= @user.email %>
    </li>
  </ul>

  <%= link "Edit", to: user_path(@conn, :edit, @user) %>
</div>
